<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="25dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="30dp"
    android:id="@+id/exp_card">

    <TextView
        android:id="@+id/experimenter_exp_desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:paddingTop="10dp"
        android:text="Experiment"
        android:textColor="@color/gradStart"
        android:textSize="30sp"
        android:textStyle="italic"></TextView>



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/experimenter_exp_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:inputType="date"
            android:paddingTop="10dp"
            android:text="User"
            android:textColor="@color/gradStart"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/experimenter_exp_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:paddingTop="10dp"
            android:text="Status"
            android:textColor="#FF2D2D"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
